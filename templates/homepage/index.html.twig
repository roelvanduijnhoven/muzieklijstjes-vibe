{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1>Album Lists</h1>
    <div class="list-group">
        {% for list in lists %}
            <a href="{{ path('app_list_show', {id: list.id}) }}" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ list.title }}</h5>
                    {% if list.releaseYear %}
                        <small>{{ list.releaseYear }}</small>
                    {% endif %}
                </div>
                
                {% if list.type == 'aggregate' %}
                    <span class="badge bg-primary rounded-pill">Aggregate</span>
                {% endif %}
                {% if list.magazine %}
                    <span class="badge bg-secondary">{{ list.magazine.name }}</span>
                {% endif %}
                {% if list.code %}
                    <small class="text-muted ms-2">{{ list.code }}</small>
                {% endif %}
            </a>
        {% endfor %}
    </div>
    
    <div class="mt-3">
        {% if page > 1 %}
            <a href="{{ path('app_home', {page: page - 1}) }}" class="btn btn-secondary">Previous</a>
        {% endif %}
        <a href="{{ path('app_home', {page: page + 1}) }}" class="btn btn-secondary">Next</a>
    </div>
</div>
{% endblock %}
