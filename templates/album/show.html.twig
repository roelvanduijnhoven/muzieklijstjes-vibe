{% extends 'base.html.twig' %}
{% import 'macros/list_macros.html.twig' as macros %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ album.title }}</li>
      </ol>
    </nav>

    <div class="row">
        <div class="col-md-3">
            {% if album.imageUrl %}
                <div class="mb-10">
                    <img src="{{ album_cover_base_url ~ album.imageUrl }}" alt="Hoes van {{ album.title }}" class="img-fluid rounded shadow" style="max-width: 100%;">
                </div>
            {% endif %}
        </div>
        <div class="col-md-9">
            <h1>{{ album.title }}</h1>
            <p class="lead">
                door <a href="{{ path('app_artist_show', {id: album.artist.id}) }}">{{ album.artist.name }}</a>
                <br>
                <small class="text-muted">Uitgebracht in {{ album.releaseYear }}</small>
            </p>

            <hr>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h3>Recensies</h3>
                    {% if album.reviews is not empty %}
                        <div class="list-group mb-4">
                            {% for review in album.reviews %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">
                                            {% if review.critic %}
                                                <a href="{{ path('app_critic_show', {id: review.critic.id}) }}">{{ review.critic.name }}</a>
                                                {% if review.magazine %}
                                                    <small class="text-muted">({{ review.magazine.name }})</small>
                                                {% endif %}
                                            {% elseif review.magazine %}
                                                {{ review.magazine.name }}
                                            {% else %}
                                                Onbekende Bron
                                            {% endif %}
                                        </h5>
                                        <small>
                                            {% if review.rating %}
                                                <span class="badge bg-primary">{{ review.rating }}</span>
                                            {% endif %}
                                        </small>
                                    </div>
                                    <p class="mb-1">
                                        {% if review.year %}
                                            {{ review.year }}
                                        {% endif %}
                                        {% if review.issueNumber %}
                                            (Editie: {{ review.issueNumber }})
                                        {% endif %}
                                    </p>
                                    {% if review.rubric %}
                                        <small class="text-muted">Rubriek: {{ review.rubric }}</small>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">Geen recensies gevonden voor dit album.</p>
                    {% endif %}
                </div>
                
                <div class="col-md-6">
                    <h3>Verschijnt in lijsten</h3>
                    {% if listItems is not empty %}
                        <div class="list-group mb-4">
                            {% for item in listItems %}
                                {% set extra_info %}
                                    {% if item.position %}
                                        Positie <strong>#{{ item.position }}</strong>
                                    {% elseif item.mentions %}
                                        {{ item.mentions }} vermeldingen
                                    {% else %}
                                        Ongenummerd
                                    {% endif %}
                                    -
                                    {{ item.albumList.type|capitalize }}
                                    {% if item.albumList.magazine %}
                                        door {{ item.albumList.magazine.name }}
                                    {% elseif item.albumList.critic %}
                                        door {{ item.albumList.critic.name }}
                                    {% endif %}
                                {% endset %}
                                {{ macros.list_card(item.albumList, album_cover_base_url, extra_info) }}
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">Dit album komt nog in geen enkele lijst voor.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
