{% extends 'base.html.twig' %}
{% import 'macros/rating.html.twig' as rating_macros %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ album.title }}</li>
      </ol>
    </nav>

    <div class="row mb-4">
        <div class="col-md-3">
            {% if album.imageUrl %}
                <div class="mb-10">
                    <img src="{{ album_cover_base_url ~ album.imageUrl }}" alt="Hoes van {{ album.title }}" class="img-fluid rounded shadow" style="max-width: 100%;">
                </div>
            {% endif %}
        </div>
        <div class="col-md-9">
            <h1>{{ album.title }}</h1>
            <p class="lead">
                door <a href="{{ path('app_artist_show', {id: album.artist.id, slug: album.artist.slug}) }}">{{ album.artist.name }}</a>
                <br>
                <small class="text-muted">Uitgebracht in {{ album.releaseYear }}</small>
            </p>

            <p>
                Dit album verschijnt in <a href="#lists">{{ listItems|length }} lijsten</a> en heeft <a href="#reviews">{{ album.reviews|length }} recensies</a>.
            </p>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-12">
            <div id="lists" class="mt-4">
                <h3>Verschijnt in lijsten</h3>
                {% if listItems is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th style="width: 100px;">Preview</th>
                                    <th>Lijst</th>
                                    <th>Info</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in listItems %}
                                    {% set list = item.albumList %}
                                    <tr style="cursor: pointer;" onclick="window.location='{{ path('app_list_show', {id: list.id, slug: list.slug}) }}'">
                                        <td>
                                            <div class="position-relative" style="width: 85px; height: 60px; transform: rotate(-2deg);">
                                                {% for previewItem in list.previewItems(3) %}
                                                    {% set offsetLeft = (loop.index0 * 15) %}
                                                    {% set offsetTop = (loop.index0 * 4) %}
                                                    {% set zIndex = 10 - loop.index0 %}
                                                    {% if previewItem.album.imageUrl %}
                                                        <img src="{{ album_cover_base_url ~ previewItem.album.imageUrl }}" 
                                                                alt="{{ previewItem.album.title }}" 
                                                                class="img-thumbnail position-absolute" 
                                                                style="width: 50px; height: 50px; object-fit: cover; top: {{ offsetTop }}px; left: {{ offsetLeft }}px; z-index: {{ zIndex }};"
                                                                title="{{ previewItem.album.title }} - {{ previewItem.album.artist.name }}">
                                                    {% else %}
                                                        <div class="bg-light border d-flex align-items-center justify-content-center text-muted small text-center p-1 position-absolute" 
                                                                style="width: 50px; height: 50px; font-size: 0.6rem; top: {{ offsetTop }}px; left: {{ offsetLeft }}px; z-index: {{ zIndex }};"
                                                                title="{{ previewItem.album.title }} - {{ previewItem.album.artist.name }}">
                                                            No Img
                                                        </div>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_list_show', {id: list.id, slug: list.slug}) }}" class="text-decoration-none fw-bold">{{ list.title }}</a>
                                            <br>
                                            <small class="text-muted">
                                                {{ list.releaseYear }} - 
                                                {% if list.type == 'ordered' %}
                                                    Genummerde Lijst
                                                {% elseif list.type == 'unordered' %}
                                                    Ongenummerde Lijst
                                                {% elseif list.type == 'aggregate' %}
                                                    Verzamelijst
                                                {% else %}
                                                    {{ list.type|capitalize }}
                                                {% endif %}
                                                {% if list.magazine %}
                                                    door {{ list.magazine.name }}
                                                {% elseif list.critic %}
                                                    door {{ list.critic.name }}
                                                {% endif %}
                                            </small>
                                        </td>
                                        <td>
                                            {% if item.position %}
                                                Positie <strong>#{{ item.position }}</strong>
                                            {% elseif item.mentions %}
                                                {{ item.mentions }} vermeldingen
                                            {% else %}
                                                Ongenummerd
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Dit album komt nog in geen enkele lijst voor.</p>
                {% endif %}
            </div>

            <div id="reviews" class="mt-5">
                <h3>Recensies</h3>
                {% if album.reviews is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Tijdschrift</th>
                                    <th>Recensent</th>
                                    <th>Rating</th>
                                    <th>Jaar</th>
                                    <th>Editie</th>
                                    <th>Rubriek</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for review in album.reviews %}
                                    <tr>
                                        <td>
                                            {% if review.magazine %}
                                                {{ review.magazine.name }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if review.critic %}
                                                <a href="{{ path('app_critic_show', {id: review.critic.id, slug: review.critic.slug}) }}">{{ review.critic.name }}</a>
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {{ rating_macros.render(review) }}
                                        </td>
                                        <td>
                                            {% if review.year %}
                                                {{ review.year }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if review.issueNumber %}
                                                {{ review.issueNumber }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if review.rubric %}
                                                {{ review.rubric.name }}
                                            {% else %}
                                                <span class="text-muted">-</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Geen recensies gevonden voor dit album.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<div id="sticky-header" class="fixed-top bg-white border-bottom shadow-sm py-2" style="transform: translateY(-100%); transition: transform 0.3s ease-in-out; z-index: 1050;">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center text-truncate">
                {% if album.imageUrl %}
                    <img src="{{ album_cover_base_url ~ album.imageUrl }}" alt="{{ album.title }}" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                {% endif %}
                <div class="text-truncate">
                    <div class="fw-bold text-truncate">{{ album.title }}</div>
                    <small class="text-muted">{{ album.artist.name }}</small>
                </div>
            </div>
            <div class="flex-shrink-0 ms-3">
                 <a href="#lists" class="btn btn-sm btn-outline-primary me-2">
                    Lijsten <span class="badge bg-primary text-white ms-1">{{ listItems|length }}</span>
                 </a>
                 <a href="#reviews" class="btn btn-sm btn-outline-secondary">
                    Recensies <span class="badge bg-secondary text-white ms-1">{{ album.reviews|length }}</span>
                 </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var stickyHeader = document.getElementById('sticky-header');
        var threshold = 300;

        window.addEventListener('scroll', function() {
            if (window.scrollY > threshold) {
                stickyHeader.style.transform = 'translateY(0)';
            } else {
                stickyHeader.style.transform = 'translateY(-100%)';
            }
        });
    });
</script>
{% endblock %}
