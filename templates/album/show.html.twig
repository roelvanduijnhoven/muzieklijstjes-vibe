{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ album.title }}</li>
      </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            {% if album.imageUrl %}
                <div class="mb-3">
                    <img src="{{ coverBaseUrl }}{{ album.imageUrl }}" alt="Cover for {{ album.title }}" class="img-fluid rounded shadow" style="max-width: 100%;">
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <h1>{{ album.title }}</h1>
            <p class="lead">
                by <a href="{{ path('app_artist_show', {id: album.artist.id}) }}">{{ album.artist.name }}</a>
                <br>
                <small class="text-muted">Released in {{ album.releaseYear }}</small>
            </p>

            <hr>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h3>Reviews</h3>
                    {% if album.reviews is not empty %}
                        <div class="list-group mb-4">
                            {% for review in album.reviews %}
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">
                                            {% if review.critic %}
                                                <a href="{{ path('app_critic_show', {id: review.critic.id}) }}">{{ review.critic.name }}</a>
                                                {% if review.magazine %}
                                                    <small class="text-muted">({{ review.magazine.name }})</small>
                                                {% endif %}
                                            {% elseif review.magazine %}
                                                {{ review.magazine.name }}
                                            {% else %}
                                                Unknown Source
                                            {% endif %}
                                        </h5>
                                        <small>
                                            {% if review.rating %}
                                                <span class="badge bg-primary">{{ review.rating }}</span>
                                            {% endif %}
                                        </small>
                                    </div>
                                    <p class="mb-1">
                                        {% if review.year %}
                                            {{ review.year }}{% if review.month %}-{{ review.month }}{% endif %}
                                        {% endif %}
                                        {% if review.issueNumber %}
                                            (Issue: {{ review.issueNumber }})
                                        {% endif %}
                                    </p>
                                    {% if review.rubric %}
                                        <small class="text-muted">Rubric: {{ review.rubric }}</small>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">No reviews found for this album.</p>
                    {% endif %}
                </div>
                
                <div class="col-md-6">
                    <h3>Appears in Lists</h3>
                    {% if listItems is not empty %}
                        <div class="list-group mb-4">
                            {% for item in listItems %}
                                <a href="{{ path('app_list_show', {id: item.albumList.id}) }}" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">{{ item.albumList.title }}</h5>
                                        <small>{{ item.albumList.releaseYear }}</small>
                                    </div>
                                    <p class="mb-1">
                                        {% if item.position %}
                                            Ranked <strong>#{{ item.position }}</strong>
                                        {% elseif item.mentions %}
                                            {{ item.mentions }} mentions
                                        {% else %}
                                            Unranked
                                        {% endif %}
                                    </p>
                                    <small class="text-muted">
                                        {{ item.albumList.type|capitalize }}
                                        {% if item.albumList.magazine %}
                                            by {{ item.albumList.magazine.name }}
                                        {% elseif item.albumList.critic %}
                                            by {{ item.albumList.critic.name }}
                                        {% endif %}
                                    </small>
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">This album does not appear in any lists yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
